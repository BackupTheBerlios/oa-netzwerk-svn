<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd"> 
<properties> 
	<comment>All DataBase specific configurations are stored in this Property-File</comment>

	<!-- specify the java-jdbc-driver-class here (for instance com.sybase.jdbc2.jdbc.SybDriver) -->
	<entry key="driver"></entry>
	<!-- specify the URL of the database: jdbc:db:...:host:port/database -->
	<entry key="url"></entry>
	<!-- enter the database user here -->
	<entry key="user"></entry>
	<!-- the matching password for the user above must be entered below -->
	<entry key="password"></entry>
	<!-- tell the system how the datasource is called -->
	<entry key="dataSourceName"></entry>
	<entry key="defaultMaxActive">100</entry>
	<entry key="defaultMaxIdle">30</entry>
	<entry key="defaultMaxWait">10000</entry>
	<!-- specify which DataBase is used (Sybase, MySQL, Oracle, DB2, ...) -->
	<entry key="DataBase"></entry>
	<!--  specify the server where the database is running -->
	<entry key="ServerName"></entry>
	<!-- at least we need the port where the database is listening -->
	<entry key="Port"></entry>
</properties>
